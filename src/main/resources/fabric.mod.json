  "authors": [
    "IamTis"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/delay-be-gone",
    "sources": "https://github.com/rburketaylor/DelayBeGone"
  },

  "license": "MIT",
  "icon": "assets/delaybegone/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.iamtis.delaybegone.DelayBeGone"
    ]
  },
  "mixins": [
    "removeshielddelay.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18",
    "java": ">=16"
  }
}
